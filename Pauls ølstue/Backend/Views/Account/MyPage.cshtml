@model Backend.Viewmodels.MyPageViewmodel
@{
    ViewBag.Title = "MyPage";
}

<div class="w3-container">
    <div class="w3-row">
        <div class="w3-col m3">
            <div class="w3-panel w3-card w3-padding">
                <label>
                    <b>Fornavn</b>
                </label>
                @Html.TextBoxFor(a => a.Firstname, new {@class = "w3-input w3-margin-bottom"})
                <label>
                    <b>Efternavn</b>
                </label>
                @Html.TextBoxFor(a => a.Lastname, new {@class = "w3-input w3-margin-bottom"})
                <label>
                    <b>Email</b>
                </label>
                @Html.TextBoxFor(a => a.Email, new {@class = "w3-input"})
                <br/>
                <input type="button" value="Gem" data-command="saveProfile" class="w3-btn w3-ripple w3-blue"/>
            </div>
        </div>
        <div class="w3-col m1">
            &nbsp;
        </div>
        <div class="w3-col m3">
            <div class="w3-panel w3-card w3-padding">
                <label>
                    <b>Værelse nr / brugernavn</b>
                </label>
                @Html.TextBoxFor(a => a.RoomNr, new {@class = "w3-input w3-margin-bottom"})
                <label>
                    <b>Adgangskode</b>
                </label>
                @Html.TextBoxFor(a => a.Password, new {@class = "w3-input w3-margin-bottom"})
                <label>
                    <b>Bekræft adgangskode</b>
                </label>
                @Html.TextBoxFor(a => a.ConfirmPassword, new {@class = "w3-input"})
                <br/>
                <input type="button" value="Gem" data-command="saveLogin" class="w3-btn w3-ripple w3-blue"/>
            </div>
        </div>
        <div class="w3-col m1">
            &nbsp;
        </div>
        <div class="w3-col m3">
            <div class="w3-panel w3-card w3-padding">
                <label>
                    <b>Billede</b>
                </label>
                <form id="imageForm" enctype="multipart/form-data">
                    @Html.TextBoxFor(a => a.Image, new { @class = "w3-input", type = "file" })
                </form>
                <br/>
                <input type="button" value="Gem" data-command="saveImage" class="w3-btn w3-ripple w3-blue"/>

            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(function() {
            $('input[type="button"]').on('click', function() {
                var command = $(this).data('command');
                var data = {};
                switch (command) {
                    case 'saveProfile':
                        data = {
                            Firstname: $('#Firstname').val(),
                            Lastname: $('#Lastname').val(),
                            Email: $('#Email').val()
                        }
                        break;

                    case 'saveLogin':
                        data = {
                            RoomNr: $('#RoomNr').val(),
                            Password: $('#Password').val(),
                            ConfirmPassword: $('#ConfirmPassword').val()
                        }
                        break;

                    case 'saveImage':
                        var formdata = new FormData();
                        var file = $('#Image')[0].files[0];
                        formdata.append('image', file);
                        console.log(formdata);
                        data = formdata;
                        break;
                    
                default:
                }
                console.log($('#imageForm'));
                $.ajax({
                    url: '/account/mypage?command=' + command,
                    type: 'post',
                    data: data,
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function(data) {
                        
                    }
                });
            });
        })
    </script>
}