@using Backend.Viewmodels
@model UsersViewmodel
<table class="w3-table-all w3-card w3-hoverable">
    <thead data-pageSize="@Model.PageSize" data-offset="@Model.Offset" data-sort="@Model.Sort" data-total="@Model.UserTotal" data-search="@Model.SearchText">
    <tr>
        <td>@Html.Raw(UsersViewmodel.Sortable(Model.Sort, "RoomNr"))</td>
        <td>@Html.Raw(UsersViewmodel.Sortable(Model.Sort, "Firstname"))</td>
        <td>@Html.Raw(UsersViewmodel.Sortable(Model.Sort, "Lastname"))</td>
        <td>@Html.Raw(UsersViewmodel.Sortable(Model.Sort, "Email"))</td>
        <td>@Html.Raw(UsersViewmodel.Sortable(Model.Sort, "Type"))</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr data-id="@user.Id">
            <td>@user.VærelseNr</td>
            <td>@user.Fornavn</td>
            <td>@user.Efternavn</td>
            <td>@user.Email</td>
            <td>@user.Role.Name</td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <td><button data-command="prev" class="w3-button w3-white w3-border w3-border-gray w3-tiny @(Model.Offset == 0 ? "w3-disabled" : "" )">Forige</button></td>
        <td> </td>
        <td> </td>
        <td> </td>
        <td><button data-command="next" class="w3-button w3-white w3-border w3-border-gray w3-tiny w3-right @((Model.Offset * Model.PageSize >= Model.UserTotal) ? "w3-disabled" : "" )">Næste</button></td>
    </tr>
    </tfoot>
</table>
